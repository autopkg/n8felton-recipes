<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple/DTD PLIST 1.0//EN" "http://apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Packages a the latest version of ClustalW</string>
	<key>Identifier</key>
	<string>com.github.n8felton.pkg.ClustalW</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>ClustalW</string>
	</dict>
	<key>ParentRecipe</key>
	<string>com.github.n8felton.download.ClustalW</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Processor</key>
			<string>PkgRootCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkgroot</key>
				<string>%RECIPE_CACHE_DIR%/payload</string>
				<key>pkgdirs</key>
				<dict>
					<key>usr</key>
					<string>0755</string>
					<key>usr/local</key>
					<string>0755</string>
					<key>usr/local/bin</key>
					<string>0755</string>
				</dict>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>InstallFromDMG</string>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key>
				<string>%pathname%</string>
				<key>download_changed</key>
				<string>true</string>
				<key>items_to_copy</key>
				<array>
					<dict>
						<key>destination_path</key>
						<string>%pkgroot%/usr/local/ClustalW-%version%</string>
						<key>source_item</key>
						<string>%filepath%/clustalw2</string>
					</dict>
				</array>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>Symlinker</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>/usr/local/ClustalW-%version%</string>
				<key>destination_path</key>
				<string>%pkgroot%/usr/local/ClustalW</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>Symlinker</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>/usr/local/ClustalW/clustalw2</string>
				<key>destination_path</key>
				<string>%pkgroot%/usr/local/bin/clustalw2</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>PkgCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkg_request</key>
				<dict>
					<key>pkgroot</key>
					<string>%pkgroot%</string>
					<key>pkgdir</key>
					<string>%RECIPE_CACHE_DIR%</string>
					<key>pkgname</key>
					<string>%NAME%-%version%</string>
					<key>pkgtype</key>
					<string>flat</string>
					<key>id</key>
					<string>de.embl.clustal</string>
					<key>version</key>
					<string>%version%</string>
					<key>chown</key>
					<array>
						<dict>
							<key>path</key>
							<string>usr</string>
							<key>user</key>
							<string>root</string>
							<key>group</key>
							<string>wheel</string>
							<key>mode</key>
							<string>0755</string>
						</dict>
					</array>
				</dict>
			</dict>
		</dict>
	</array>
</dict>
</plist>
